{
  "name": "client-ts",
  "version": "0.0.0",
  "description": "Common dev-time dependencies for SignalR NPM packages. NOT FOR PUBLISHING",
  "main": "index.js",
  "scripts": {
    "build": "cd ./signalr && npm run build && cd ../signalr-protocol-msgpack && npm run build",
    "pretest": "tslint -c ./tslint.json -p ./signalr/tests/tsconfig.json && tslint -c ./tslint.json -p ./signalr-protocol-msgpack/tests/tsconfig.json",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "author": "Microsoft",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^8.10.21",
    "@types/webpack": "^4.4.6",
    "jest": "^22.4.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "uglify-js": "^3.4.4",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.jest.json",
        "skipBabel": true,
        "enableTsDiagnostics": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "^@aspnet/signalr$": "<rootDir>/signalr/src/index.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "npm": "^6.2.0"
  }
}
